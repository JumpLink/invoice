doctype html
html(lang="en", ng-app="jumplink.invoice")
  head
    title Invoice

    // Viewport mobile tag for sensible mobile support
    meta(name="viewport",content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no")

    // Stylesheets
    link(href='/styles/material.css', rel='stylesheet')

    // Templates
    script(type="text/ng-template", id="material/layout"): include angular-templates/material/layout.jade
    script(type="text/ng-template", id="material/leftSideNav"): include angular-templates/material/leftSideNav.jade
    script(type="text/ng-template", id="material/home/content"): include angular-templates/material/home/content.jade
    script(type="text/ng-template", id="material/home/toolbar"): include angular-templates/material/home/toolbar.jade
    script(type="text/ng-template", id="material/home/actionButtons"): include angular-templates/material/home/actionButtons.jade
    script(type="text/ng-template", id="material/invoices/content"): include angular-templates/material/invoices/content.jade
    script(type="text/ng-template", id="material/invoices/toolbar"): include angular-templates/material/invoices/toolbar.jade
    script(type="text/ng-template", id="material/invoices/actionButtons"): include angular-templates/material/invoices/actionButtons.jade
  body()
    span(ui-view)
    script(type="text/javascript", src="/third-party/angular/angular.js")
    script(type="text/javascript", src="/third-party/angular-dynamic-locale/src/tmhDynamicLocale.js")
    script(type="text/javascript", src="/third-party/moment/moment.js")
    script(type="text/javascript", src="/third-party/angular-moment/angular-moment.js")
    script(type="text/javascript", src="/third-party/moment/lang/de.js")
    script(type="text/javascript", src="/third-party/angular-fullscreen/src/angular-fullscreen.js")
    script(type="text/javascript", src="/third-party/qrcode-generator/js/qrcode.js")
    script(type="text/javascript", src="/third-party/angular-qrcode/qrcode.js")
    script(src='/third-party/webodf/webodf-debug.js', type='text/javascript', charset='utf-8')

    //- script(type="text/javascript", src="/third-party/collide/collide.js")
    script(type="text/javascript", src="/third-party/angular-animate/angular-animate.js")
    script(type='text/javascript', src='/third-party/angular-material/angular-material.js')
    script(type="text/javascript", src="/third-party/angular-ui-router/release/angular-ui-router.js")
    script(type="text/javascript", src="/third-party/angular-sanitize/angular-sanitize.js")

    //- Bring in the socket.io client
    script(type="text/javascript", src="/js/dependencies/socket.io.js")
    //- then beef it up with some convenience logic for talking to Sails.js'
    script(type="text/javascript", src="/third-party/sails.io.js/sails.io.js")
    //- and for angular
    script(type="text/javascript", src="/third-party/angularSails/dist/ngsails.io.js")

    //- localisation
    script(src='/third-party/angular-translate/angular-translate.js', type='text/javascript')
    script(src='/third-party/angular-translate-loader-url/angular-translate-loader-url.js', type='text/javascript')

    script(type="text/javascript", src="/js/app.js")
    script(type="text/javascript", src="/js/material.js")
    script(type="text/javascript", src="/js/translations.js")
    script(type="text/javascript", src="/js/services.js")
    script(type="text/javascript", src="/js/controllers.js")
    script(type="text/javascript", src="/js/material/controllers.js")
    script(type="text/javascript", src="/js/directives/webodf.js")
